<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ContinentalTestDb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContinentalTestDb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ContinentalTestDb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                        
                       @* Inserir dados por classe*@
                        <li class="nav-item">

						<div class="dropdown flex-grow-1">
							<a class="nav-link text-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
								Inserir dados por classe
							</a>
							<ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuLink">

								<li><a class="dropdown-item" asp-area="" asp-controller="Components" asp-action="Create">Components</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Coordinators" asp-action="Create">Coordenadores</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Devices" asp-action="Create">Devices</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Lines" asp-action="Create">Linhas</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Operators" asp-action="Create">Operadores</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Production_Plan" asp-action="Create">Planos de Produção</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Productions" asp-action="Create">Produções</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Create">Produtos</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Reasons" asp-action="Create">Razões</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Schedule_Worker_Line" asp-action="Create">Horarios de Tabalho</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Stops" asp-action="Create">Paragens</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Supervisors" asp-action="Create">Supervisores</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Workers" asp-action="Create">Workers</a></li>

							</ul>
						</div>
						</li>

                        @* Visualizar os dados por classe*@
                        <li class="nav-item">

						<div class="dropdown flex-grow-1">
							<a class="nav-link text-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
								Visualizar os dados por classe
							</a>
							<ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuLink">

								<li><a class="dropdown-item" asp-area="" asp-controller="Components" asp-action="Index">Components</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Coordinators" asp-action="Index">Coordenadores</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Devices" asp-action="Index">Devices</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Lines" asp-action="Index">Linhas</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Operators" asp-action="Index">Operadores</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Production_Plan" asp-action="Index">Planos de Produção</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Productions" asp-action="Index">Produções</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Produtos</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Reasons" asp-action="Index">Razões</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Schedule_Worker_Line" asp-action="Index">Horarios de Tabalho</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Stops" asp-action="Index">Paragens</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Supervisors" asp-action="Index">Supervisores</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Workers" asp-action="Index">Workers</a></li>

							</ul>
						</div>
						</li>

                        @* Funções da Continental*@
                        <li class="nav-item">

						<div class="dropdown flex-grow-1">
							<a class="nav-link text-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
								Funções da Continental
							</a>
							<ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuLink">

								<li><a class="dropdown-item" asp-area="" asp-controller="Requests" asp-action="Index">RequestsIndex</a></li>
								<li><a class="dropdown-item" asp-area="" asp-controller="Requests" asp-action="Create">RequestsCreate</a></li>

							</ul>
						</div>
						</li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ContinentalTestDb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
